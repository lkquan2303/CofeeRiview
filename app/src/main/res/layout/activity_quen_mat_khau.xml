<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".ViewController.QuenMatKhau">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="528dp"
        android:text="Khôi Phục Mật Khẩu"
        android:textColor="@color/text"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginBottom="491dp"
        android:text="Vui lòng nhập email đã đăng ký"
        android:textColor="@color/text"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edquenmk"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="46dp"
        android:layout_marginRight="46dp"
        android:layout_marginBottom="420dp"
        android:backgroundTint="@color/text"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="example@gmail.com"
        android:inputType="text|textEmailAddress"
        android:textColor="@color/text"
        android:textColorHint="@color/text"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btkhoiphuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="68dp"
        android:layout_marginBottom="346dp"
        android:background="@drawable/radionbutton"

        android:drawablePadding="10dp"
        android:drawableTint="@color/colorPrimary"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:text="Khôi Phục Mật Khẩu" />

</RelativeLayout>