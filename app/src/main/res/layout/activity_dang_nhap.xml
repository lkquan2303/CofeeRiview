<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".ViewController.DangNhap">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="578dp"
        android:backgroundTint="@color/text"
        android:text="PERSONAL DIARY"
        android:textColor="@color/text"
        android:textSize="45dp"
        android:textStyle="italic" />

    <EditText

        android:id="@+id/edemail"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:layout_marginBottom="492dp"
        android:backgroundTint="@color/text"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="example@gmail.com"
        android:inputType="textEmailAddress"
        android:textColor="@color/text"
        android:textColorHint="@color/text" />

    <EditText
        android:id="@+id/edmk"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:layout_marginBottom="418dp"
        android:backgroundTint="@color/text"
        android:drawableLeft="@drawable/pass"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Mật Khẩu"
        android:inputType="textPassword"
        android:textColor="@color/text"
        android:textColorHint="@color/text" />

    <TextView
        android:gravity="center"
        android:textColor="@color/red"
        android:id="@+id/tvfaildn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="394dp" />

    <Button
        android:backgroundTint="#FFFFFF"
        android:textAllCaps="false"
        android:id="@+id/btndangnhap"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="334dp"
        android:background="@drawable/radiusbutton"
        android:drawablePadding="10dp"
        android:drawableTint="@color/bg"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="Đăng nhập"
        android:textColor="@color/text" />

    <Button
        android:backgroundTint="#FFFFFF"
        android:id="@+id/btfb1"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="145dp"
        android:background="@drawable/radiusbutton"
        android:drawableLeft="@drawable/icon_facebook"
        android:paddingLeft="15dp"
        android:text="Đăng nhập bằng FaceBook"
        android:textAllCaps="false"
        android:textColor="@color/text" />

    <Button
        android:backgroundTint="#FFFFFF"
        android:id="@+id/btdngoogle"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="210dp"
        android:background="@drawable/radiusbutton"
        android:drawableLeft="@drawable/icon_google"
        android:paddingLeft="20dp"
        android:paddingRight="30dp"
        android:text="Đăng nhập bằng Google"
        android:textAllCaps="false"
        android:textColor="@color/text" />

    <TextView
        android:id="@+id/tvqmk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="243dp"
        android:layout_marginBottom="70dp"
        android:gravity="center"
        android:text="Quên mật khẩu ? "
        android:textColor="@color/text"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tvdkm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="70dp"
        android:gravity="center"
        android:text="Đăng ký mới ? "
        android:textColor="@color/text"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="266dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="270dp"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"
            android:text="Hoặc"
            android:textColor="@color/text"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/text" />
    </LinearLayout>


</RelativeLayout>